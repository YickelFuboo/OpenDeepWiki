# 数据库配置
DB_TYPE=sqlite
DB_CONNECTION_STRING=sqlite:///./data/koalawiki.db

# JWT配置
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=1440

# AI模型配置
MODEL_PROVIDER=OpenAI
CHAT_MODEL=gpt-4
ANALYSIS_MODEL=gpt-4
DEEP_RESEARCH_MODEL=gpt-4
CHAT_API_KEY=your-openai-api-key
ENDPOINT=https://api.openai.com/v1

# 仓库配置
REPOSITORIES_PATH=./repositories
TASK_MAX_SIZE_PER_USER=5
MAX_FILE_LIMIT=100
UPDATE_INTERVAL=7

# 功能开关
ENABLE_SMART_FILTER=true
ENABLE_INCREMENTAL_UPDATE=true
ENABLE_CODE_DEPENDENCY_ANALYSIS=false
ENABLE_WAREHOUSE_COMMIT=true
ENABLE_FILE_COMMIT=true
REFINE_AND_ENHANCE_QUALITY=true
ENABLE_WAREHOUSE_FUNCTION_PROMPT_TASK=true
ENABLE_WAREHOUSE_DESCRIPTION_TASK=true
ENABLE_CODE_COMPRESSION=false

# 目录格式
CATALOGUE_FORMAT=compact

# 语言设置
LANGUAGE=Chinese

# Redis配置（用于Celery）
REDIS_URL=redis://localhost:6379/0

# 第三方登录配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITEE_CLIENT_ID=your-gitee-client-id
GITEE_CLIENT_SECRET=your-gitee-client-secret

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log 