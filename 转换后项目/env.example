# 应用配置
APP_NAME=KoalaWiki
DEBUG=false

# 数据库配置
DATABASE_URL=sqlite:///./koalawiki.db
DATABASE_ECHO=false

# JWT配置
JWT_SECRET=your-secret-key-here
JWT_ISSUER=KoalaWiki
JWT_AUDIENCE=KoalaWiki
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_MINUTES=10080

# OpenAI配置
OPENAI_CHAT_MODEL=gpt-3.5-turbo
OPENAI_ANALYSIS_MODEL=gpt-3.5-turbo
OPENAI_CHAT_API_KEY=your-openai-api-key
OPENAI_ENDPOINT=https://api.openai.com/v1
OPENAI_MODEL_PROVIDER=OpenAI
OPENAI_MAX_FILE_LIMIT=10
OPENAI_DEEP_RESEARCH_MODEL=gpt-4
OPENAI_ENABLE_MEM0=false
OPENAI_MEM0_API_KEY=
OPENAI_MEM0_ENDPOINT=

# GitHub配置
GITHUB_API_KEY=your-github-api-key
GITHUB_USER_AGENT=KoalaWiki

# Gitee配置
GITEE_API_KEY=your-gitee-api-key
GITEE_USER_AGENT=KoalaWiki

# 文档配置
DOCUMENT_MAX_FILE_SIZE=10485760
DOCUMENT_ALLOWED_EXTENSIONS=.md,.txt,.pdf
DOCUMENT_STORAGE_PATH=./uploads 