# 应用基础配置
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./koalawiki.db

# OpenAI配置
OPENAI_ENDPOINT=https://api.openai.com/v1
OPENAI_CHAT_API_KEY=your-openai-chat-api-key
OPENAI_CHAT_MODEL=gpt-4
OPENAI_ANALYSIS_MODEL=gpt-4
OPENAI_DEEP_RESEARCH_MODEL=gpt-4
OPENAI_MAX_FILE_LIMIT=4000
OPENAI_MODEL_PROVIDER=openai

# Mem0配置
MEM0_ENABLE_MEM0=false
MEM0_MEM0_API_KEY=your-mem0-api-key
MEM0_MEM0_ENDPOINT=https://api.mem0.ai

# GitHub配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_TOKEN=your-github-token

# Gitee配置
GITEE_CLIENT_ID=your-gitee-client-id
GITEE_CLIENT_SECRET=your-gitee-client-secret
GITEE_TOKEN=your-gitee-token

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ISSUER=KoalaWiki
JWT_AUDIENCE=KoalaWiki
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# 文档配置
DOCUMENT_ENABLE_CODE_DEPENDENCY_ANALYSIS=true
DOCUMENT_ENABLE_INCREMENTAL_UPDATE=true
DOCUMENT_ENABLE_SMART_FILTER=true
DOCUMENT_CATALOGUE_FORMAT=compact
DOCUMENT_ENABLE_WAREHOUSE_FUNCTION_PROMPT_TASK=true
DOCUMENT_ENABLE_WAREHOUSE_DESCRIPTION_TASK=true
DOCUMENT_ENABLE_FILE_COMMIT=true
DOCUMENT_ENABLE_WAREHOUSE_COMMIT=true
DOCUMENT_REFINE_AND_ENHANCE_QUALITY=true
DOCUMENT_ENABLE_CODE_COMPRESSION=false
DOCUMENT_EXCLUDED_FILES=[]
DOCUMENT_EXCLUDED_FOLDERS=[]

# Git配置
GIT_PATH=./repositories
GIT_USERNAME=your-git-username
GIT_PASSWORD=your-git-password
GIT_EMAIL=koalawiki@example.com 